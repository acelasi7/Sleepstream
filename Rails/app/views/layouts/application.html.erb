<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <script src="https://code.highcharts.com/stock/highstock.js"></script>
  <script src="https://code.highcharts.com/stock/modules/exporting.js"></script>

  <script type="text/javascript" src="http://jaysalvat.github.io/vegas/releases/latest/jquery.vegas.min.js"></script>

  <script type="text/javascript">
      $(document).ready(function() {
            $.fn.fullpage({
              'navigation': true,
            });
            // $.vegas({
            //   src:'https://s3.amazonaws.com/ooomf-com-files/B1L437ebTHi1qEDR47Lz_milano_naviglio_1.jpg'
            // });
            // $.vegas('overlay', {
            //   src:'/vegas/overlays/13.png'
            // });
      });   
  </script>

  <%= render 'layouts/shim' %>
</head>

<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
    
    <% debug(params) if Rails.env.development? %>
  </div>
  <%= render 'layouts/footer' %>

</body>
</html>
